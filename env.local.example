# TTT POS Cashier Environment Variables

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=TTT-POS Cashier
NEXT_PUBLIC_VERSION=2.0.0

# Digital Wallet Cards API (Loyalty System)
NEXT_PUBLIC_DIGITAL_WALLET_API_URL=https://api.digitalwallet.cards
NEXT_PUBLIC_DIGITAL_WALLET_API_KEY=your_digital_wallet_api_key_here

# Django Authentication
NEXT_PUBLIC_DJANGO_AUTH_URL=http://localhost:8000/api/auth
NEXT_PUBLIC_DJANGO_TOKEN_REFRESH_URL=http://localhost:8000/api/auth/refresh

# PWA Configuration
NEXT_PUBLIC_PWA_NAME=TTT-POS Cashier
NEXT_PUBLIC_PWA_DESCRIPTION=Modern Point of Sale system for restaurants
NEXT_PUBLIC_PWA_THEME_COLOR=#D1AB35
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#161616

# Development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
